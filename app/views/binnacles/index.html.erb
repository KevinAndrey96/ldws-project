<p id="notice"><%= notice %></p>

<h1>Listing Binnacles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Company</th>
      <th>Action</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @binnacles.each do |binnacle| %>
      <tr>
        <td><%= binnacle.user %></td>
        <td><%= binnacle.company %></td>
        <td><%= binnacle.action %></td>
        <td><%= binnacle.description %></td>
        <td><%= link_to 'Show', binnacle %></td>
        <td><%= link_to 'Edit', edit_binnacle_path(binnacle) %></td>
        <td><%= link_to 'Destroy', binnacle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

