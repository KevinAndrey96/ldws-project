    <% @request=Request.where(:company_id => @company.id).first %>
<!doctype html>
<html>
<head>
  <meta charset='utf-8' />
  <%= wicked_pdf_stylesheet_link_tag "pdf" -%>
  <%= wicked_pdf_javascript_include_tag "number_pages" %>
</head>
<body onload='number_pages'>
  <div id="content">
    

    <div class="container-fluid">
      <center><h1><%=@company.name%></h1></center>
      <h2>Datos de empresa</h2>
      <table class="table table-responsive"  border="1" width= "100%">
          <tbody>
              <tr>
                  <th><p><strong>Título: </strong><%=@request.title%></p></th>
                  <th><p><strong>Descipción: </strong><%=@request.description%></p></th>
              </tr>
              <tr>
                  <th><p><strong>Observaciones: </strong><%=@request.observation%></p></th>
                  <th>      <p><strong>Misión: </strong><%=@company.mision%></p></th>
              </tr>
              <tr>
                  <th><p><strong>Visión: </strong><%=@company.vision%></p></th>
                  <th><p><strong>Nit: </strong><%=@company.nit%></p></th>
              </tr>
              <tr>
                  <th><p><strong>Objetivos: </strong><%=@request.objective%></p></th>
              </tr>
             
          </tbody>
      </table>
      
      <center><h1>Cotización estándar</h1></center>
      
      <h2>Servicios</h2>
      
      <% if @request.web %>  
      <p><strong>Web: </strong>Servidor Apache (HTTPd)</p>
      <% end %>

      <% if @request.bd %>
      <p>        <strong>Base de datos: </strong>MySQL Server</p>
      <% end %>


      <% if @request.aplications %>
      <p>        <strong>Aplicaciones: </strong>LAMP</p>
      <% end %>

      <% if @request.proxy %>
      <p>        <strong>Proxy: </strong>Squid 3.5.27</p>
      <% end %>

      <% if @request.voip %>
      <p>        <strong>Voip: </strong>Asterisk 15
      </p>
      <% end %>
      
            <% #if @request.correo %>
      <p>        <strong>Correo: </strong>Exchange</p>
      <% #end %>


      <% if @request.video_conference %>
      <p>        <strong>Video conference: </strong>LDAP</p>
      <% end %>

      <% if @request.active_dir %>
      <p>        <strong>Directorio activo:</strong>      </p>
      <% end %>

      <% if @request.dhcp %>
      <p>        <strong>Dhcp:</strong>      </p>
      <% end %>


      <% if @request.dns %>
      <p>        <strong>Dns:</strong>      </p>
      <% end %>

      <% if @request.ftp %>
      <p>        <strong>Ftp:</strong>        <%= @request.ftp %>      </p>
      <% end %>
      
      <div class="row">
        <h2>Aspectos Físicos</h2>
 
<p><strong>NÚMERO DE PISOS: </strong><%= @physical.count %></p>
<p><strong>ALTURA POR PISO: </strong><%= @physical.first.height %> m</p>
<p><strong>ANCHO POR PISO: </strong><%= @physical.first.width %> m</p>
<p><strong>LARGO POR PISO: </strong><%= @physical.first.large %> m</p>
<p><strong># EXTENSIONES POR PISO:</strong>?</p> 
<p><strong>SALA DE JUNTAS: </strong><%= @physical.first.conference_hall %></p>
<p><strong>ENLACES REDUNDANTES: </strong>?</p>

      </div>
      
      <div class="row">
        <table class="table table-responsive"  border="1" width= "100%">
          <thead>
            <tr>
              <th>Tipo de dispositivo</th>
              <th>Cantidad</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Impresoras</td>
              <td><%= @physical.first.computers/5 %></td>
            </tr>
            <tr>
              <td>Equipos</td>
              <td><%= @physical.first.computers %></td>
            </tr>
            <tr>
              <td>Servidores</td>
              <td>1</td>
            </tr>
            <tr>
              <td>Routers</td>
              <td>
                <% if @physical.first.width>30 && @physical.first.large>30 %>
                <% @Var=2 %>
                <%= @Var %>
                <%else%>
                <% @Var=1 %>
                <%= @Var %>
                <%end%>
                
              </td>
            </tr>
            <tr>
              <td>Switches de acceso</td>
              <td>#</td>
            </tr>
            <tr>
              <td>Switches de distribución</td>
              <td><%= @physical.count %></td>
            </tr>
            <tr>
              <td>Punto de acceso inhalambrico</td>
              <td>
                <%=@Var%>
</td>
            </tr>
            
            <tr>
              <td><strong>Total</strong></td>
              <td>
                <% @Total= @physical.first.computers/5+@physical.first.computers+1+@Var+ @physical.count+@Var %>
                <strong><%= @Total %></strong>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      
      <div class="row">
        <h2>Direccionamiento</h2>
        <table class="table table-responsive"  border="1" width= "100%">
          <thead>
             <tr>
               <th>Nombre de Subred</th>
               <th>Espacio Necesario</th>
               <th>Espacio Alojado</th>
               <th>Dirección</th>
               <th>Máscara</th>
               <th>Máscara Decimal</th>
               <th>Rango Asignable</th>
               <th>Difusión</th>
             </tr>


          </thead>
          <tbody>
              <tr><td>Gestión</td></tr>
              <tr><td>Sala de Juntas</td></tr>
              <tr><td>Presidencia</td></tr>
              <tr><td>Varios</td></tr>

            
          </tbody>
        </table>
      </div>
      
      
    </div>
  </div>
</body>
</html>
