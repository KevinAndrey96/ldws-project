      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% @company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="col-md-4"></div>
<div class="col-md-4">
   <div class="field">
    <h3>Nombre de empresa</h3>
    <%= f.text_field :name , :class =>"form-control", :required => "true"%>
  </div>
  
  <div class="field">
    <h3>Nit</h3>
    <%= f.number_field :nit , :class =>"form-control", :required => "true", :max => "999999999" %>
  </div>
  <div class="field">
    <h3>Misión</h3>
    <%= f.text_area :mision, :class =>"form-control", :required => "true" %>
  </div>
  <div class="field">
    <h3>Visión</h3>
    <%= f.text_area :vision, :class =>"form-control", :required => "true" %>
  </div>
  <div class="actions">
    <input type="submit" value="Comenzar" class="btn btn-default">
  </div>

 
<% end %>
</div>
<div class="col-md-4"></div>
