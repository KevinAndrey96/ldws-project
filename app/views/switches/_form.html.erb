    <label>Número de puertos<input type="number" name="puerto<%=aux%>" placeholder="Número de puertos" class="form-control" value="0"></label>
  </div></center>
  <%
  end
  %>
  
  <input type="hidden" name="numerodepuertos" value="<%=aux%>">
  
  <div class="actions">
    <center><input type="submit" class="btn btn-default" value="Agregar"></center>
  </div>
<% end %>
</div>
