    <!-- Navigation -->
    <nav class="navbar navbar-light bg-light static-top">
      <div class="container">
        <a class="navbar-brand" href="/users/sign_in">LDWS Software</a>

<% if user_signed_in? %>
  Bienvenido <strong><%= current_user.email %></strong>.
  <%= link_to 'Editar Perfil', edit_user_registration_path, :class => 'navbar-link', :style => "z-index: 100;" %> |
  <%= link_to "Cerrar Sesión", destroy_user_session_path, method: :delete, :class => 'navbar-link', :style => "z-index: 100;"  %>
<% else %>
  <%= link_to "Registro", new_user_registration_path, :class => 'navbar-link', :style => "z-index: 100;"  %> |
  <%= link_to "Iniciar Sesión", new_user_session_path, :class => 'navbar-link', :style => "z-index: 100;"  %>
<% end %>
