<%= form_for @user, url: manage_users_path(@user), html: { method: :create } do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <label>Nombre</label>
    <%= f.text_field :name  , :class => 'form-control' %>
  </div>
  <div class="field">
    <label>Teléfono</label>
    <%= f.number_field :phone  , :class => 'form-control' %>
  </div>
  <div class="field">
    <label>Correo Electrónico</label>
    <%= f.text_field :email  , :class => 'form-control' %>
  </div>
  <div class="field">
    <label>Contraseña</label>
    <%= f.password_field :password  , :class => 'form-control' %>
  </div>
  <div class="field">
    <label>Confirmar Contraseña</label>
    <%= f.password_field :password_confirmation  , :class => 'form-control' %>
  </div>
  
  <div class="field">
    
   
       <label>Rol</label>
       <%= select_tag("user[role]", options_for_select([['Administrador', "Admin"],["Usuario","User"]]), :class => 'form-control' ) %>
    
  </div>
  
  <br>
  <div class="actions">
    <%= f.submit "Guardar", :class => 'btn btn-info' %>
  </div>
<% end %>
<br>

