<style>

  .form-control {
      background-color: #F3F2EE;
      border: 1px solid #e8e7e3;
      border-radius: 4px;
      color: #66615b;
      font-size: 14px;
      padding: 7px 18px;
      height: 40px;
      -webkit-box-shadow: none;
      box-shadow: none;
  }  
  
  .btn{
      background-color: #5e8283;
      color: #FFFFFF;
      border-radius: 20px;
      box-sizing: border-box;
      border-width: 2px;
      font-size: 14px;
      font-weight: 600;
      padding: 7px 18px;
      color: white !important;
      -webkit-transition: all 150ms linear;
      -moz-transition: all 150ms linear;
      -o-transition: all 150ms linear;
      -ms-transition: all 150ms linear;
      transition: all 150ms linear;
  }
  
  h3 {
      display: inline-block;
      max-width: 100%;
      margin-bottom: 5px;
      font-weight: bold;
      font-size: 15px;
  }
</style>

<%= form_for @user, url: manage_users_path(@user), html: { method: :create } do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this client from being saved:</h2>
  
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
<div class="col-md-4"></div>
<div class="col-md-4"> 
    <div class="field">
      <label>Nombre</label>
      <%= f.text_field :name  , :class => 'form-control' %>
    </div>
    <div class="field">
      <label>Teléfono</label>
      <%= f.number_field :phone  , :class => 'form-control' %>
    </div>
    <div class="field">
      <label>Correo Electrónico</label>
      <%= f.text_field :email  , :class => 'form-control' %>
    </div>
    <div class="field">
      <label>Contraseña</label>
      <%= f.password_field :password  , :class => 'form-control' %>
    </div>
    <div class="field">
      <label>Confirmar Contraseña</label>
      <%= f.password_field :password_confirmation  , :class => 'form-control' %>
    </div>
    
    <div class="field">
      
     
         <label>Rol</label>
         <%= select_tag("user[role]", options_for_select([['Administrador', "Admin"],["Usuario","User"]]), :class => 'form-control' ) %>
      
    </div>
    
    <br>
    <div class="actions">
      <center><input type="submit" class="btn btn-default" value="Guardar"></center>
    </div>
    </div>
  <% end %>
  <div class="col-md-4"></div>
<br>

