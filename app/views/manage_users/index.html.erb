<p id="notice"><%= notice %></p>

<h1>Usuarios registrados</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Teléfono</th>
      <th>Rol</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Ver', manage_user_path(user) %></td>
        <td><%= link_to 'Editar', edit_manage_user_path(user) %></td>
        <td><%= link_to 'Eliminar', manage_user_path(user), method: :delete, data: { confirm: '¿Está seguro?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Usuario', new_manage_user_path %>
